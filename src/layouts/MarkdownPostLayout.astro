---
import Contact from "../components/sections/Contact.astro";
import MainLayout from "./MainLayout.astro";
import Website from "./Website.astro";
const { frontmatter } = Astro.props;
---

<MainLayout>
  <div id="grid" class="grid lg:grid-cols-2 grid-cols-1 dropshadow-3xl">
    <div id="sq1" class="bg-lavender border border-black">
      <a href="/#my-projects" class="text-carribean font-extrabold pl-2">
        {"<--"}
      </a>
      <div class="p-5 m-1 flex justify-center items-center flex-col h-full">
        <h2 class="font-bold text-4xl">{frontmatter.title}</h2>
        <p class="bg- text-lg px-[50px] mx-5">{frontmatter.description}</p>
      </div>
    </div>
    <div id="sq2" class="bg-test2">
      <a href={frontmatter.websiteUrl}>
        <img
          src={frontmatter.image.url}
          alt=""
          class="border border-carribean hover:opacity-80"
        />
      </a>
    </div>
  </div>

  <div class="m-5 px-[100px] py-[50px] 2xl:text-2xl md:text-lg sm:text-md">
    <slot />
    <Contact />
  </div>
</MainLayout>
