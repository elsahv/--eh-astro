---
import Card from "../components/Card.astro";
const allWebsites = await Astro.glob('../pages/websites/*.md')
---

<div id="portfolio" class="mt-[100px]">
<h2 class="lg:text-5xl md:text-4xl text-3xl md:mt-14 pt-5 underline ml text-onyx">Portfolio </h2>
<div id="website-grid" class="mb-5 grid 2xl:grid-cols-2 grid-cols-1 gap-x-6 md:gap-y-12 gap-y-1">
    {allWebsites.map((website) => <div class="list-none">
        <Card title={website.frontmatter.title} url={website.url} SiteImg={website.frontmatter.image.url} />
        </div>)}
        </div>
</div>
</div>