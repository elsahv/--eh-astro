---
import Card from "../components/Card.astro";
const allWebsites = await Astro.glob("../pages/websites/*.md");
---

<div id="portfolio" class="mx-2 md:pt-[50px] pt-1">
  <h2
    class="text-5xl md:mt-14 pl-1 pt-5 mb-5 pb-5 underline text-onyx md:hidden"
  >
    Portfolio
  </h2>
  <div
    id="website-grid"
    class="mb-5 mr-5 grid grid-cols-1 gap-x-10 md:gap-y-12"
  >
    <div id="website-grid" class="flex flex-col gap-x-10 md:gap-y-12">
      {
        allWebsites.map((website) => (
          <div class="list-none">
            <Card
              title={website.frontmatter.title}
              url={website.url}
              SiteImg={website.frontmatter.image.url}
            />
          </div>
        ))
      }
    </div>
  </div>
</div>
