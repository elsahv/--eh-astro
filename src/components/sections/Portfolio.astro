---
import Card from "../Card.astro";
const allWebsites = await Astro.glob("../../pages/websites/*.md");
---

<div id="portfolio" class="p-5 mx-2 md:pt-[50px] pt-1">
  <h2
    class="text-5xl md:mt-14 pl-1 pt-5 mb-5 pb-5 underline text-onyx md:hidden"
  >
    Portfolio
  </h2>
  <div id="website-grid" class="mt-5 mb-5 mr-5 flex flex-col gap-x-10 gap-y-24">
    {
      allWebsites.map((website) => (
        <Card
          title={website.frontmatter.title}
          url={website.url}
          image={website.frontmatter.image.url}
          description={website.frontmatter.description}
          websiteUrl={website.frontmatter.websiteUrl}
        />
      ))
    }
  </div>
</div>
