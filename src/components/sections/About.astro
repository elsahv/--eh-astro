---
import Banner from "../Banner.astro";

const items = [
  {
    listItem:
      "I'm based in Joshua Tree, CA. Its a place which inpires many colors I became interested in programming when I wanted to bring my own passion projects to life.",
  },
  {
    listItem:
      "My days are spent creating niche websites and solutions for small business owners and creatives.",
  },
  {
    listItem:
      "My expertise currently lies in javascript websites, and freelance wordpress projects.",
  },
];
---

<section id="about" class="pt-5 pb-5 md:pl-5 pl-1 h-">
  <div id="" class="p-5 px-5">
    <div id="" class="md:mr-5 mx-0 lg:p-5 p-0">
      <div class="pb-2 font-medium text-onyx">
        <Banner title="About" paragraph="" />

        <div id="paragraph-container" class="">
          <h2 class="pt-1 font-semibold">
            Hi there, I'm Elsa... a web developer for small businesses and
            creatives.
          </h2>
          <ul class="pt-1 list-disc pl-2 2xl:w-3/4 w-full">
            {items.map((item) => <li class="pt-1">{item.listItem}</li>)}
            <li class="pt-1">
              You can view all my featured sites
              <a
                href="/#about"
                class="underline hover:text-carribean text-munsell"
              >
                below...</a
              >
            </li>
          </ul>
        </div>
        <br />
      </div>
    </div>
  </div>
</section>
