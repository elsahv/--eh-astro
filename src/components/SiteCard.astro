---
const frontmatter = Astro.props;
const { title, image, alt, url, testItem1, testItem2, testItem3, testItem4 } =
  frontmatter;
---

<div
  id="sq"
  class="2xl:pr-5 pr-1 2xl:mr-5 mr-1 my-5 opacity-80 hover:opacity-100 p-1"
>
  <a href={url}>
    <h3 class="text-onyx font-semibold text-xl pb-1 pl-1">
      {title}
    </h3>
    <img
      src={image}
      class="drop-shadow-md border-2 border-black hover:border-munsell hover:border-2 hover:cursor-pointer"
      alt={alt}
    />
    <div
      class="bg-test text-onyx bg-papaya mb-5 ml-1 mr-5 md:pl-4 pl-1 pr-2 pt-2 pb-3 drop-shadow-md"
    >
      <p class="">
        {testItem1}
        <button class="pl-2 font-semibold hover:underline">
          <a href={url}>-view site</a>
        </button>
      </p>
    </div>
  </a>
</div>
