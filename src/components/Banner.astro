---
import { Image } from "astro:assets";
import Icon1 from "../../public/icons/github.png";
import Icon2 from "../../public/icons/linkedin.png";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<div
  id="banner-wrapper"
  class="flex justify-between md:my-0 mt-5 md:py-0 py-5 bg-munsell border-b-2 border-carribean lg:text-left text-center lg:pl-5"
>
  <h1 class="md:text-4xl text-3xl capitalize py-4 text-onyx">
    {title}
  </h1>
  <div id="LINKS-CONTAINER" class="bg-test px-2 flex">
    <div class="flex items-center">
      <Image src={Icon1} alt="" width={32} height={32} class="mx-1" />
      <!-- <a href="/work-with-me">Work with me</a> -->
    </div>

    <div class="ml-2 flex items-center">
      <Image src={Icon2} alt="" width={32} height={32} class="mx-1" />
      <!-- <a href="/contact">Contact</a> -->
    </div>
  </div>
</div>
