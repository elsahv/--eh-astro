---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<div
  id="banner-wrapper"
  class="md:my-0 mt-5 md:py-0 py-5 bg-munsell border-b-2 border-carribean lg:text-left text-center lg:pl-5"
>
  <h1 class="md:text-4xl text-3xl capitalize py-4 text-onyx">
    {title}
  </h1>
</div>
