---
export interface Props {
  title: string;
  paragraph: string;
}

const { title, paragraph } = Astro.props as Props;
---

<div
  id="js"
  class="mr-5 pr-5 text-2xl 2xl:mt-[120px] mt-2 2xl:pt-[120px] pt-5 text-onyx underline"
>
  <h2 class="text-4xl font-semibold pb-1 md:pl-4 ml-2">
    {title}:
  </h2>

  <p class="pr-5 mr-5 md:px-5 px-3 md:pb-2 pb-3 text-lg opacity-90">
    {paragraph}
  </p>
</div>
