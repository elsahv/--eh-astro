---
export interface Props {
  title: string;
  paragraph: string;
}

const { title, paragraph } = Astro.props as Props;
---

<div id="js" class="mr-5 pr-5 text-2xl 2xl:mt-[150px] mt-2 2xl:pt-[150px] pt-5">
  <div id="" class="">
    <h2 class="text-2xl font-bold pb-1 md:pl-5 pl-2 underline">
      {title}
    </h2>
  </div>

  <p class="pr-5 mr-5 md:px-5 px-3 md:pb-2 pb-3 text-lg opacity-90">
    {paragraph}
  </p>
</div>
