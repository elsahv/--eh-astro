              <div id="website-navigation" class="flex space-x-4">
                <!-- <div class="text-aquamarine py-2 px-3 flex items-center bg-onyx rounded">All featured sites</div> -->
                
              {posts.map((post) => (
                <div class="bg-onyx text-aquamarine py-2 px-3 rounded-md">{post.website}</div>
