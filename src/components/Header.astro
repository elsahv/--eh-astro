---
import { Image } from "astro:assets";
import ProfilePic from "../../public/eh-img.jpg";

const menuItems = [
  // {
  //   title: "about",
  //   scrollLink: "/#about",
  // },
  {
    title: "portfolio",
    scrollLink: "/#portfolio",
  },
  {
    title: "contact",
    scrollLink: "/#contact",
  },
];
---

<header
  class="pb-[45px] md:fixed relative md:left-0 top-0 z-50 h-screen 2xl:w-1/4 lg:w-[390px] md:w-[345px] max-[690px]:w-[360px] max-[px]:w-full border-black border-r-2"
>
  <nav
    class="_shadowText1 text-aliceBlue dropshadow-3xl pl-4 pr-2 w-full absolute z-10 bottom-0 mb-2"
  >
    <!-- - Introduction: Start with your name and a brief overview of who you are. Mention your profession or primary identity (e.g., student, artist, entrepreneur). -->

    <div class="text-lg mb- pb- pl-2">
      <p class="text-4xl text-munsell bg-">Elsa Hovey</p>
    </div>

    <ul id="map-links-container" class="pb-5 pl-3 pt-1">
      {
        menuItems.map((menuItem) => (
          <li class="hover:text-aquamarine">
            <a href={menuItem.scrollLink}>-{menuItem.title}</a>
          </li>
        ))
      }
    </ul>
  </nav>
  <Image src={ProfilePic} alt="" class="absolute bottom-0 z-0 h-screen" />
</header>
