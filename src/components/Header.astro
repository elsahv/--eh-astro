---
import { Image } from "astro:assets";
import ProfilePic from "../../public/eh-img.jpg";

const menuItems = [
  {
    title: "about",
    scrollLink: "/#about",
  },
  {
    title: "contact",
    scrollLink: "/#contact",
  },
];
---

<>
  <header
    class="bg-carribean pb-[45px] md:fixed relative md:left-0 top-0 z-50 h-screen 2xl:w-1/4 lg:w-[390px] md:w-[345px] w-full md:border-r-2 border-b-2 border-black"
  >
    <nav
      class="_shadowText1 text-aliceBlue dropshadow-3xl pl-4 pr-2 w-full absolute z-10 bottom-0 mb-2"
    >
      <p class="text-lg mb-1 pb-1 pl-2">
        <span class="text-munsell text-3xl">
          Hi there, I'm
          <span class="">Elsa.</span>
          <br /></span
        >

        <span class="text- text-md pr-5">
          I'm the developer who's built:
          <a href="https://therunningquail.com" class="underline ext-white"
            >The Running Quail
          </a> and
          <a href="https://laughingcoyote.dev" class="underline ext-white"
            >Laughing Coyote Dev</a
          >
          .
        </span>
      </p>

      <div id="LINKS-CONTAINER" class="pl-2 pb-5">
        {
          menuItems.map((menuItem) => (
            <div>
              <a href={menuItem.scrollLink}>-{menuItem.title}</a>
            </div>
          ))
        }
      </div>
    </nav>
    <Image
      src={ProfilePic}
      alt=""
      class="absolute bottom-0 z-0 h-screen border border-t-black"
    />
  </header>
</>
