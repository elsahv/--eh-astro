---
export interface Props {
  title: string;
  url: any;
  image: any;
  description: string;
  websiteUrl: any;
}

const { title, image, description, websiteUrl } = Astro.props as Props;
---

<div class="md:pl-1">
  <div class="pb-1 flex">
    <div
      id="text-bold"
      class="text-2xl font-semibold 2xl:absolute relative 2xl:text-white text-black"
    >
      <h2 class="text-onyx">{title}</h2>
      <p class="text-onyx opacity-80">-{description}</p>
    </div>
  </div>

  <a href={websiteUrl} class="">
    <img
      src={image}
      alt=""
      class="w-full border-2 border-onyx drop-shadow-3xl rounded-md 2xl:opacity-70 2xl:hover:opacity-100"
    />
  </a>

  <div class="text-right p-1 mr-1 list-none">
    <li class="font-semibold hover:text-parchment">
      <a href="/">view case study</a>
    </li>

    <li class="hover:text-aquamarine">
      <a href={websiteUrl}> visit site </a>
    </li>
  </div>
</div>
