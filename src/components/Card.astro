---
export interface Props {
  title: string;
  url: any;
  image: any;
  description: string;
  websiteUrl: any;
}

const { title, image, description, websiteUrl } = Astro.props as Props;
---

<div class="md:px-5 px-0">
  <div class="pb-1 flex rounded-tr-lg rounded-tl-lg">
    <div
      id="text-bold"
      class="text-2xl mr-3 font-semibold absolute mt-5 ml-5 pt-5 text-white"
    >
      <h2>{title}</h2>
      <p class="opacity-80">-{description}</p>
    </div>
  </div>

  <a href={websiteUrl} class="">
    <img
      src={image}
      alt=""
      class="w-full border-2 border-onyx drop-shadow-3xl rounded-md opacity-70 hover:opacity-100"
    />
  </a>

  <div class="text-right p-1 mr-1 list-none">
    <li class="font-semibold hover:text-parchment">
      <a href="/">view case study</a>
    </li>

    <li class="hover:text-aquamarine">
      <a href={websiteUrl}> visit site </a>
    </li>
  </div>
</div>
