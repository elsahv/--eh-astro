  <div class="flex items-center text-4xl">
    <h2 class="text-5xl mt-14 pt-5 underline ml-3 text-onyx">Portfolio</h2>
  </div>

<div class="pl-3 mt-2 text-aquamarine">
  <p class="text-2xl text-onyx py-1">
    Listed below are some of my featured websites projects, all currently a
    work in progress. Click on each image to view description 
  </p>
  <!-- todo: DECIDE IMG OVERLAY EFFECTS v -->
  <button class="">
  <Image src={DownArrow} alt="" width={35} height={35} class="">
  </button>
    <!-- todo end: DECIDE IMG OVERLAY EFFECTS ^ -->

  </div>



    <div id="website-grid" class="grid 2xl:grid-cls-2 grid-cols-1 gap-6 mt-[100px]">
    {posts.map((item) => (
        <div
          id="sq"
          class="my-5 h-screen"
        >
          <a
            class="hover:opacity-80 hover:ease-in duration-300"
            href={item.url}
          >
         <div class="pb-1 pl-1">
          <span class="text-aquamarine text-2xl">{item.p}</span>
          </div>         
            <Image
              class="2xl:w-[1020px] w-full drop-shadow-3xl border-2 border-onyx"
              src={item.image}
              alt={item.title}
            />
          </a>
        </div>
    ))}
  </div>

