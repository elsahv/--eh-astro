import { Image } from "astro:assets";
import lc from "../images/lc.jpg";
import rq from "../images/rq.png";

const websites = [
  {
    title: "Featured Freelance Site",
    screenshot: lc,
    p: "Laughing Coyote Dev provides website solutions for small business/ creatives.... Above is my main project, the Laughing Coyote Dev, a blog and freelance service in progress. ist the languages, tools... an online resource to help small businesses get their website started. Laughing coyote is going to be a resource for small business owners. I wanted to find a way to simplify the process and reduce the overwhelm of figuring out how to build a website, use a website, and market yourself... all on top of worrying about your own business. Scroll down to see other projects!",
    url: "https://laughingcoyote.dev",
    github: "https://github.com/elsahv/--LC-astro",
    websiteId: "lc",
  },
  {
    title: "Featured Fullstack Project",
    screenshot: rq,
    p: "The Running Quail is going to be a resource for small business owners. an online bulletin board for the Morongo Basin Community.atque quaerat. Quia delectus quidem natus architecto. Lorem ipsum dolor sit atque quaerat. Quia delectus    quidem natus architecto. Lorem ipsum dolor sitatque quaerat. Quia delectus quidem natus architecto. Lorem ipsum dolor sit",
    url: "rq",
    github: "https://github.com/elsahv/-the-running-quail",
    websiteId: "rq",
  },
];
---

<>
  <div id="websites-wrapper" class="mb-5">
    <div id="websites-container" class="flex flex-col-1 md:gap-y-8 gap-y-1">
      <div class="md:mt-[50px] mt-[75px] xl:pl-[35px] lg:pl-5 pl-0 bg-test">
        {
          websites.map((website: any) => (
            <div
              id="sq"
              class="2xl:p-5 p-1 mt-5 mb-[20px] mr-5 md:pl-4 pl-0 opacity-85 hover:opacity-100 "
            >
              <div
                id={website.websiteId}
                class="px-5 mx-5  mb-[75px] dropshadow-lg scroll-smooth "
              >
                <a href={website.url} target="_blank" rel="noopener noreferrer">
                  <Image
                    src={website.screenshot}
                    alt=""
                    class="mx-5 border border-rosyBrown hover:border-carribean"
                  />
                  <div id="content-wrapper" class=" xl:pl-5 p-0 bg-">
                    <div id="content-container" class="bgtest1 pl-5">
                      <div
                        id="content"
                        class="ml-1 mt- py-2 pl-1 2xl:px-[70px] md:px-2 px-1 mb-5 opacity-90 text-onyx"
                      >
                        <h2 class="font-bold opacity-100 pt-3">
                          {website.title}
                        </h2>
                        <p class="">{website.p}</p>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</>
