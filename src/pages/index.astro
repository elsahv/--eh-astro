---
import About from "../components/sections/About.astro";
import Contact from "../components/sections/Contact.astro";
import MainLayout from "../layouts/MainLayout.astro";

const allWorks = await Astro.glob("./works/*.md");
---

<!-- TODO CURRENTLY: TEST FOR USING MARKDOWN FOR JOURNAL -->
<MainLayout>
  <About />
  <section class="mt-[150px]">
    <div id="portfolio" class="md:px-5 px-0 h- pt-5">
      <section>
        <div id="wrapper" class="mt-[71px] pt-5">
          <div id="container" class="py-5 my-5">
            <div id="grid-wrapper" class="2xl:px-[51px] md:px-5 px-2">
              <div class="text-onyx">
                <h2 class="text-2xl pb-1 md:pl-5 pl-2">Portfolio</h2>
                <p class="md:px-5 px-3 pb-2">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit.
                  Libero nihil, repudiandae ratione ad eum molestias dolore qui,
                  at debitis exercitationem sed, maxime quidem praesentium harum
                  inventore temporibus assumenda quod voluptatum?
                </p>
              </div>
              <div
                id="grid"
                class="mt-3 pt-5 grid 2xl:grid-cols-2 grid-cols-1 gap-y-[80px] gap-x-12 md:px-5 px-1"
              >
                {
                  allWorks.map((work) => (
                    <div id="sq" class="opacity-80 hover:opacity-100">
                      <a
                        href={work.frontmatter.websiteUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        <img
                          src={work.frontmatter.image.url}
                          alt={work.frontmatter.image.alt}
                          class=" drop-shadow-md border border-rosyBrown hover:border-cerulean hover:border-2 hover:cursor-pointer "
                        />
                        <div class="bg-papaya ml-1 mr-5 md:pl-4 pl-1 pr-2 pt-2 pb-3 drop-shadow-md">
                          <p class="py-1 md:pr-5 pr-1 text-md">
                            {work.frontmatter.description}
                            <p class="text-sm text-onyx hover:underline">
                              visit {work.frontmatter.title}
                            </p>
                          </p>
                        </div>
                      </a>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
        <Contact />
      </section>
    </div>
  </section>
</MainLayout>
