---
import About from "../components/sections/About.astro";
import Contact from "../components/sections/Contact.astro";
import Banner from "../components/Banner.astro";
import MainLayout from "../layouts/MainLayout.astro";
const allPhp = await Astro.glob("./php/*.md");
const allJS = await Astro.glob("./js/*.md");
---

<MainLayout>
  <About />
  <section class="2xl:mt-[150px]">
    <div id="portfolio" class="md:px-5 px-0 h- pt-5">
      <section>
        <div id="wrapper" class="2xl:mt-[71px] pt-5">
          <div id="container" class="py-5 my-5">
            <div id="js" class="2xl:px-[51px] px-2">
              <!-- TODO: JS SECTION v-->
              <Banner
                title="JavaScript projects"
                paragraph="These 2 of my most ambitious projects, both build with JS frameworks, sit amet consectetur adipisicing. dolore qui, at debitis exercitationem sed, maxime quidem "
              />
              <div id="" class="">
                <div
                  id=""
                  class="mt-3 pt-5 grid 2xl:grid-cols-2 grid-cols-1 gap-y-[80px] gap-x-12 md:px-5 px-1"
                >
                  {
                    allJS.map((work) => (
                      <div id="sq" class="opacity-80 hover:opacity-100">
                        <a href={work.url}>
                          <img
                            src={work.frontmatter.image.url}
                            alt={work.frontmatter.image.alt}
                            class=" drop-shadow-md border border-rosyBrown hover:border-cerulean hover:border-2 hover:cursor-pointer "
                          />
                          <div class="bg-papaya ml-1 mr-5 md:pl-4 pl-1 pr-2 pt-2 pb-3 drop-shadow-md">
                            <div class="py-1 md:pr-5 pr-1 mx-1 text-md">
                              <p>{work.frontmatter.description}</p>

                              <button class="text-sm text-onyx hover:underline">
                                visit {work.frontmatter.title}
                              </button>
                            </div>
                          </div>
                        </a>
                      </div>
                    ))
                  }
                </div>
              </div>
              <!-- TODO: JS SECTION ^-->

              <!-- //* PHP SECTION v-->

              <div id="php" class="mt-[">
                <Banner
                  title="Php -Wordpress"
                  paragraph="2 more of my passion projects, first one ever being wtbh .these are my php projects, sit amet consectetur adipisicing. dolore qui, at debitis exercitationem sed, maxime quidem "
                />
                <div
                  class="mt-3 pt-5 grid 2xl:grid-cols-2 grid-cols-1 gap-y-[80px] gap-x-12 md:px-5 px-1"
                >
                  {
                    allPhp.map((work) => (
                      <div id="sq" class="opacity-80 hover:opacity-100">
                        <a href={work.url}>
                          <img
                            src={work.frontmatter.image.url}
                            alt={work.frontmatter.image.alt}
                            class=" drop-shadow-md border border-rosyBrown hover:border-cerulean hover:border-2 hover:cursor-pointer "
                          />
                          <div class="bg-papaya ml-1 mr-5 md:pl-4 pl-1 pr-2 pt-2 pb-3 drop-shadow-md">
                            <p class="py-1 md:pr-5 pr-1 text-md">
                              {work.frontmatter.description}
                              <p class="text-sm text-onyx hover:underline">
                                visit {work.frontmatter.title}
                              </p>
                            </p>
                          </div>
                        </a>
                      </div>
                    ))
                  }
                </div>
              </div>
              <!-- //* PHP SECTION ^-->
            </div>
          </div>
        </div>
        <Contact />
      </section>
    </div>
  </section>
</MainLayout>
