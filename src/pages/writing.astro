---
import Banner from "../components/Banner.astro";
import SiteCard from "../components/SiteCard.astro";
import MainLayout from "../layouts/MainLayout.astro";

const allFeaturedSites = await Astro.glob("./websites/*.md");
---

<MainLayout>
  <!-- <About /> -->
  <Banner
    title="Writing"
    paragraph="Lorem ipsum dolor sit amet consectetur, adipisicing elit. Neque aperiam, nobis tenetur fugiat libero ducimus ab excepturi officia obcaecati cumque provident reiciendis laborum quod magnam repellat illum quas vitae et."
  />
  <div id="wrapper" class="md:px-5 px-0 pl-2 pt-5 2xl:mt-[71px]">
    <div id="container" class="py-5 my-5 pl-1">
      <div id="featured-websites" class="text- 2xl:px-[51px] px-2">
        <div id="websites-container" class="mt-1 pt-1">
          <div
            id="websites-grid"
            class="bg- mt-5 pt-5 px-1 grid grid-cols-1 gap-y-24"
          >
            {
              allFeaturedSites.map((work) => (
                <SiteCard
                  title={work.frontmatter.title}
                  image={work.frontmatter.image.url}
                  alt={work.frontmatter.image.alt}
                  url={work.url}
                  testItem1={work.frontmatter.testItem1}
                />
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
