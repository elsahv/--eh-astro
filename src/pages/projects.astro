---
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import img1 from "../../public/screenshots/lc.png";
import img2 from "../../public/screenshots/rq.png";
import img3 from "../../public/screenshots/wtbh.png";
import img4 from "../../public/screenshots/jungle.png";

const items = [
  {
    title: "Laughing Coyote Dev",
    img: img1,
  },
  {
    title: "The Running Quail",
    img: img2,
  },
  {
    title: "Writing to Better Health",
    img: img3,
  },
  {
    title: "The Indoor Jungle Project",
    img: img4,
  },
];
---

<MainLayout>
  <h2>projects</h2>
  <div id="grid-container" class="">
    <div id="grid" class="grid grid-cols-2 gap-5">
      {
        items.map((item) => (
          <div id="sq" class="border-4 border-cerulean ">
            <h2>{item.title}</h2>
            <Image src={item.img} alt="/" />
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
